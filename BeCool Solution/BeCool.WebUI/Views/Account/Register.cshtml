@model RegisterFormModel
@{
    ViewData["Title"] = "Register";
}


<div class="breadcrumb-area">
    <div class="container">
        <div class="breadcrumb-content">
            <ul>
                <li><a href="index.html">Home</a></li>
                <li class="active">Register</li>
            </ul>
        </div>
    </div>
</div>
<!-- Li's Breadcrumb Area End Here -->

<div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
    <form method="post">
        <div class="login-form">
            <h4 class="login-title">Register</h4>
            <div class="row">
                <div asp-validation-summary="All"></div>
                @if (!string.IsNullOrWhiteSpace(ViewBag.Message))
                {
                    <div class="alert alert-danger col-md-12 col-12 mb-20">@ViewBag.Message</div>
                }
                <div class="col-md-6 col-12 mb-20">
                    <label>Ad</label>
                    <input class="mb-0" asp-for="Name" placeholder="Ad">
                </div>
                <div class="col-md-6 col-12 mb-20">
                    <label>Last Name</label>
                    <input class="mb-0" asp-for="Surname" placeholder="Soyad">
                </div>
                <div class="col-md-12 mb-20">
                    <label>Email Address*</label>
                    <input class="mb-0" asp-for="Email" placeholder="Email Address">
                </div>
                <div class="col-md-6 mb-20">
                    <label>Password</label>
                    <input class="mb-0" asp-for="Password" placeholder="Şifrə">
                </div>
                <div class="col-md-6 mb-20">
                    <label>Confirm Password</label>
                    <input class="mb-0" asp-for="ConfirmPassword" placeholder="Şifrəni təsdiq edin">
                </div>
                <div class="col-12">
                    <button type="submit" class="register-button mt-0">Register</button>
                </div>
            </div>
        </div>
    </form>
</div>
